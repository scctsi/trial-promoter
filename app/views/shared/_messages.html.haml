%table.ui.celled.padded.table
  %thead
    %tr
      %th
        Database ID
      %th
        Content
      %th
        Message Type
      %th
        Clinical Trial
      %th
        Scheduled At
      %th
        Length
  %tbody
    - messages.each do |message|
      %tr
        %td= message.id.to_s
        - if message.message_template.platform == 'google'
          %td
            %ul
              %li= message.content[0]
              %li= message.content[1]
              %li= message.content[2]
              %li= message.content[3]
        - else
          %td= message.content
        %td= message.message_template.message_type
        %td
          %a{ :href => message.clinical_trial.url, :target => "_blank"}
            View Trial
        %td= message.scheduled_at.strftime('%b %e, %Y')
        %td= message.content.length
