%h1.ui.block.header
  Clinical Trials
.ui.top.attached.tabular.menu
  %a.active.item{ "data-tab" => 'all-trials' }
    All Trials
    %span.ui.black.label
      #{ @all_trials.count.to_s }
  %a.item{ "data-tab" => 'randomized-trials' }
    Randomized Trials
    %span.ui.green.label
      #{ @selected_trials.count.to_s }
  %a.item{ "data-tab" => 'control-group-trials' }
    Control Group Trials
    %span.ui.blue.label
      #{ @control_trials.count.to_s }
  %a.item{ "data-tab" => 'unused-trials' }
    Unused Trials
    %span.ui.grey.label
      #{ @unused_trials.count.to_s }
.ui.bottom.attached.active.tab.segment{ "data-tab" => 'all-trials'}
  %table.ui.celled.padded.table
    %thead
      %tr
        %th.single.line
          ID
        %th
          NCT ID
        %th.single.line
          PI Name
        %th.single.line
          Title
        %th.single.line
          URL
    %tbody
      - @all_trials.each do |clinical_trial|
        %tr
          %td= clinical_trial.id.to_s
          %td= clinical_trial.nct_id
          %td= clinical_trial.pi_name
          %td= clinical_trial.title
          %td= clinical_trial.url
